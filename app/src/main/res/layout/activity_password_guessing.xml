<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password_guessing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.piyush.passwordhackingsystem.PasswordGuessingActivity">

    <TextView
        android:text="Your ETA is : "
        android:id="@+id/activity_password_guessing_tv_etaIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_password_guessing_tv_eta"
        android:layout_toRightOf="@+id/activity_password_guessing_tv_etaIS"
        android:text="1 year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Brute Force"
        android:id="@+id/activity_password_guessing_btn_bruteFroce"
        android:layout_below="@+id/activity_password_guessing_tv_etaIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Dictionary Attack"
        android:id="@+id/activity_password_guessing_btn_dictionary"
        android:layout_below="@+id/activity_password_guessing_btn_bruteFroce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Your Password is : "
        android:id="@+id/activity_password_guessing_tv_passwordIs"
        android:layout_width="wrap_content"
        android:layout_below="@+id/activity_password_guessing_btn_dictionary"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_password_guessing_tv_password"
        android:text="qwerty"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_password_guessing_btn_dictionary"
        android:layout_toRightOf="@+id/activity_password_guessing_tv_eta"
        android:layout_toEndOf="@+id/activity_password_guessing_tv_eta"
       />




</RelativeLayout>
