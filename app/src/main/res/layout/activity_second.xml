<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.piyush.passwordhackingsystem.SecondActivity">

    <TextView

        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/second_activity_et_minRange"
        android:ems="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="5"
        android:inputType="number"

        android:layout_alignTop="@+id/second_activity_et_maxRange"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
    <!--android:layout_marginLeft="48dp"-->
    <!--android:layout_marginStart="48dp"-->
        />

    <TextView
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:layout_alignBottom="@+id/second_activity_et_minRange"
        android:layout_toRightOf="@+id/second_activity_et_minRange"
        android:layout_toEndOf="@+id/second_activity_et_minRange" />

    <EditText
        android:id="@+id/second_activity_et_maxRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="10"
        android:ems="4"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starts From"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <EditText
        android:id="@+id/second_activity_et_startsFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hey"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/second_activity_et_maxRange"
        android:layout_alignStart="@+id/second_activity_et_maxRange" />

    <TextView
        android:textAppearance="?android:textAppearanceLarge"
        android:text="Contains:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Lower-case"
        android:id="@+id/second_activity_cb_lowerCase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <CheckBox
        android:text="Upper-case"
        android:id="@+id/second_activity_cb_upperCase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_activity_cb_lowerCase"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <CheckBox
        android:text="Number"
        android:id="@+id/second_activity_cb_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_activity_cb_upperCase"
        android:layout_alignLeft="@+id/second_activity_cb_upperCase"
        android:layout_alignStart="@+id/second_activity_cb_upperCase" />

    <CheckBox
        android:text="Special Character"
        android:id="@+id/second_activity_cb_specialCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_activity_cb_number"
        android:layout_toLeftOf="@+id/test"
        android:layout_toStartOf="@+id/test" />

    <Button
        android:text="Submit"
        android:id="@+id/second_activity_btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Submit!"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hacking Time"
        android:id="@+id/textView5"
        android:textSize="30dp"
        android:layout_below="@+id/second_activity_cb_specialCharacter"
        android:layout_toRightOf="@+id/second_activity_cb_specialCharacter"
        android:layout_toEndOf="@+id/second_activity_cb_specialCharacter" />

</RelativeLayout>
